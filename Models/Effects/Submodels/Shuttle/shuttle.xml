<PropertyList>
  
<!--

author:             Aeromatic v 0.9
filecreationdate:        2009-04-09
version: 
description:       Models a shuttle

  Inputs:
    name:          shuttle
    type:          three-engine transonic transport
    max weight:    240000 lb
    wing span:     78.06 ft
    length:        122.17 ft
    wing area:     2691.25 sq-ft
    gear type:     tricycle
    retractable?:  yes
    # engines:     3
    engine type:   rocket
    engine layout: aft fuselage
    yaw damper?    yes
  Outputs:
    wing loading:  89.18 lb/sq-ft
    CL-alpha:      4.4 per radian
    CL-0:          0.2
    CL-max:        1.2
    CD-0:          0.019
    K:             0.042

flight-model:  jsb
author:        Gijs de Rooy, NASA (3D)

download:      https://gitorious.org/space-shuttle
wiki:          http://wiki.flightgear.org/Space_Shuttle

Modification for transport on AN-225 with animation of cargo doors by HerbyW 01/2015

-->
  
	<path>shuttle.ac</path>
		
<offsets>          <heading-deg>0</heading-deg> </offsets>  

<animation>
<type>select</type>

<condition>
  <equals>
    <property>sim/multiplay/generic/int[7]</property>
    <value>3</value>
  </equals>
</condition>
</animation>
  
  <!--Lights-->
                                   
 <animation>   
   <object-name>spaceshutt_spstob_1</object-name>
   <object-name>spaceshutt_spstob</object-name>
   <object-name>spaceshutt_spstob.001</object-name>
   <object-name>spaceshutt_spstob_eal</object-name>
   <object-name>spaceshutt_spstob_3</object-name> 
   <object-name>spaceshutt_spstob_2</object-name>
   <object-name>spaceshutt_spstob_4</object-name>
</animation>


  <!-- working for Rembrandt -->
  

  <animation>
    <type>material</type>
    <object-name>spaceshutt_spstob_1</object-name>
   <object-name>spaceshutt_spstob</object-name>
   <object-name>spaceshutt_spstob.001</object-name>
   <object-name>spaceshutt_spstob_eal</object-name>
   <object-name>spaceshutt_spstob_3</object-name> 
   <object-name>spaceshutt_spstob_2</object-name>
   <object-name>spaceshutt_spstob_4</object-name>   
   <emission>
      <factor>1</factor>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

<animation>
<type>pick</type>
<object-name>spaceshutt_spstob</object-name>
<object-name>spaceshutt_spstob.001</object-name>

<visible>true</visible>
<action>
<button>0</button>


<binding>
<command>property-cycle</command>
<property>sim/multiplay/generic/int[2]</property>
<value>0</value>
<value>10</value>
</binding>

<binding>
<command>property-interpolate</command>
<property>sim/multiplay/generic/int[2]</property>

<rate>0.1</rate><!-- 8 seconds to 0 from 10 or 10 to 0 -->
</binding>
</action>
</animation>

 
 <animation>
  <type>rotate</type>
  <object-name>spaceshutt_spstob</object-name>
  <property>sim/multiplay/generic/int[2]</property>
  <interpolation>
    <entry>
      <ind>2</ind>
      <dep>0</dep>
    </entry>
    <entry>
      <ind>10</ind>
      <dep>-171</dep>
    </entry>
  </interpolation>
  <center>
   <x-m> -2.2671</x-m>
   <y-m> -2.552</y-m>
   <z-m>  -1.52</z-m>
   
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>spaceshutt_spstob.001</object-name>
  <property>sim/multiplay/generic/int[2]</property>
  <interpolation>
    <entry>
      <ind>2</ind>
      <dep>0</dep>
    </entry>
    <entry>
      <ind>10</ind>
      <dep>171</dep>
    </entry>
  </interpolation>
  <center>
   <x-m> -2.2672</x-m>
   <y-m>  2.552</y-m>
   <z-m>  -1.52</z-m>
   
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <model>
		<name>Strobe_1</name>
		<path>Aircraft/AN-225/Models/light/strobe-red.xml</path>	
		<offsets>
			<x-m>9.45</x-m>
			<y-m>-11.9</y-m>
			<z-m>-4.46</z-m>
		</offsets>
	</model>   
	
	<model>
		<name>Strobe_4</name>
		<path>Aircraft/AN-225/Models/light/strobe-green.xml</path>	
		<offsets>
			<x-m>9.45</x-m>
			<y-m>11.9</y-m>
			<z-m>-4.46</z-m>
		</offsets>
	</model>   
        <model>
		<name>Strobe_3</name>
		<path>Aircraft/AN-225/Models/light/strobe-yellow.xml</path>	
		<offsets>
			<x-m>-8.9</x-m>
			<y-m>0</y-m>
			<z-m>-1</z-m>
		</offsets>
	</model>   

</PropertyList>