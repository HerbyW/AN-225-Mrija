<!-- Light switches block -AN-12
3D instrument for Tu-154 -->
<PropertyList>
 <path>bano.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
  <object-name>base_3</object-name>
  <object-name>base_4</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <offset>0.1</offset>
      <red>   0.11 </red>
      <green> 0.11 </green>
      <blue>  0.11 </blue>
    </emission>
</animation>

<!--Controls 1=CargoDoor 2=not-used 3=ALS Lights-->
<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>sim/multiplay/generic/int[12]</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	15.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>controls/paratroopers/jump-signal-pos</property> 
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>handle_3</object-name>
  <property>controls/ALS/setting-pos</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Controls not used now, later -->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
	<command>property-interpolate</command>
	<property>sim/multiplay/generic/int[12]</property>
	<value type="int">1000</value>
	<rate>10</rate><!-- 20 seconds to 0 to 100 -->
      </binding>
    </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
	<command>property-interpolate</command>
	<property>sim/multiplay/generic/int[12]</property>
	<value type="int">0</value>
	<rate>10</rate><!-- 20 seconds to 0 to 100 -->
      </binding>
    </action>
</animation>


<!--Controls not used now, later -->
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  
</animation>

<animation>
  <type>pick</type>
  <object-name>hotspot_4</object-name>
  <visible>false</visible>
  
</animation>


<animation>
  <type>pick</type>
  <object-name>hotspot_5</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>     
     <binding>
        <command>property-toggle</command>
        <property>controls/ALS/setting</property>
      </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>hotspot_6</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>     
     <binding>
        <command>property-toggle</command>
        <property>controls/ALS/setting</property>
      </binding>
  </action>
</animation>

</PropertyList>

