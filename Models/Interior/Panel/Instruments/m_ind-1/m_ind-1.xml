<PropertyList>
  <path>m_ind-1.ac</path>
  
  <!-- Original from IL-76 TD, modified for mach 2 by HerbyW 12/2015 -->
  
  <!--Lights-->
  
  <animation>  
    <object-name>rect1</object-name>
    <object-name>rect2</object-name>
    <object-name>m_ind</object-name> 
    <object-name>machset</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  
  <animation>
    <type>material</type>
    <object-name>rect1</object-name>
    <object-name>rect2</object-name>
    <object-name>m_ind</object-name>
    <object-name>machset</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>rect1</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind>  0.0</ind><dep>    0</dep></entry>
      <entry><ind> 0.5</ind><dep>  180</dep></entry>
      <entry><ind> 1</ind><dep>  360</dep></entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>rect2</object-name>
    <property>autopilot/settings/target-speed-mach</property>
    <interpolation>
      <entry><ind>  0.0</ind><dep>    0</dep></entry>
      <entry><ind> 0.5</ind><dep>  180</dep></entry>
      <entry><ind> 1</ind><dep>  360</dep></entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>rect</object-name>
    <condition>
      <and>
	<greater-than>
	  <property>velocities/mach</property>   
	  <value>0.95</value>
	</greater-than>
	<less-than>
	  <property>velocities/mach</property>   
	  <value>1.05</value>
	</less-than>
      </and>
    </condition>
  </animation>
  
<animation>
    <type>material</type>    
    <object-name>rect</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   1.0 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>
  
  <!--  Machset -->

    <animation>
        <type>pick</type>
        <object-name>machset</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
             <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-mach</property>
                <step>-0.01</step>
                <min>0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>machset</object-name>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
             <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-mach</property>
                <step>0.01</step>
                <min>0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>machset</object-name>
        <action>
            <button>3</button>
             <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-mach</property>
                <step>-0.05</step>
                <min>0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>machset</object-name>
        <action>
            <button>4</button>
             <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-mach</property>
                <step>0.05</step>
                <min>0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
  
  </PropertyList>

