<!--Plane deg-->  
<animation>
  <type>rotate</type>
  <object-name>dig_plane_ones</object-name>
  <property>instrumentation/nav/radials/selected-deg</property>
  <factor>36</factor>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_plane_dec</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>instrumentation/nav/radials/selected-deg</property>
          <value>100</value>
        </mod>
        <mod>
          <property>instrumentation/nav/radials/selected-deg</property>
          <value>10</value>
        </mod>
      </difference>
      <value>3.6</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_plane_hund</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>instrumentation/nav/radials/selected-deg</property>
          <value>1000</value>
        </mod>
        <mod>
          <property>instrumentation/nav/radials/selected-deg</property>
          <value>100</value>
        </mod>
      </difference>
      <value>0.36</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>



<!--Handles-->


<animation>
        <type>pick</type>
        <object-name>plane_sym_handle</object-name>
        <action>
            <button>0</button>
				<repeatable>true</repeatable>
				<interval-sec>0.2</interval-sec>
             <binding>
                <command>property-adjust</command>
                <property>instrumentation/nav/radials/selected-deg</property>
