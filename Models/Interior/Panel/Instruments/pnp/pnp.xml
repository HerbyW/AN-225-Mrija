    <product>
      <abs><property>instrumentation/nav/nav-distance</property></abs>
      <value>0.036</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01393</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0534</z-m>
  </center>
