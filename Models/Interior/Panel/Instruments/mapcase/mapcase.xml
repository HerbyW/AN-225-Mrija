<!-- Mapcase for AN-225-Mrija -->
<PropertyList>
  
  <path>mapcase2.ac</path>  
 
  <animation>
  <type>material</type>  
  <object-name>MESH23.001</object-name>
  <object-name>mapcase</object-name>
  <object-name>mapcase_hs</object-name>  
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<animation>
  <type>knob</type>
  <object-name>mapcase_hs</object-name>
  <visible>false</visible>
  <increase>
    <binding>
      <command>nasal</command>
      <script>mapcase.switch_page(1)</script>
    </binding>
  </increase>
  <decrease>
    <binding>
      <command>nasal</command>
      <script>mapcase.switch_page(-1)</script>
    </binding>
  </decrease>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>mapcase-page</tooltip-id>
      <label>Page %s</label>
      <property>instrumentation/mapcase/page</property>
      <mapping>nasal</mapping>
      <script>
        var page = arg[0];
        var pages = size(mapcase.root.getChildren());
        return sprintf("%d/%d", page, pages);
      </script>
    </binding>
  </hovered>
</animation>


</PropertyList>
